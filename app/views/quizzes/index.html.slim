// new quizzes index table below
table.styled-table
  thead
    tr
      //th Id
      th Title
      th Created At
      th Question Count
      th Description
      th Take this Quiz

  tbody
    - @quizzes.each do |quiz|
      tr
        //td = quiz.id
        td = link_to quiz.title, quiz_path(quiz)
        td = date_in_words(quiz.created_at)
        td = quiz.question_count
        td = quiz.description
        td = button_to "Take Quiz", take_quiz_path(quiz), method: :get, class: 'custom-button-table'

// if site visitor is loged in and he is admin. He can see Create Quiz button
- if current_user && current_user.is_admin?
  = button_to 'Create Quiz', new_quiz_path, method: :get, class: 'custom-button'